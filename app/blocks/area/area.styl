.area
	position relative
	display flex
	flex-wrap wrap
	width 400px
	height 400px
	background rgba(255, 255, 255, .5)
	border 7px solid black
	border-radius 10px
	user-select none
	box-shadow 10px 10px 20px 0 black

	&:before
		position absolute
		z-index 10
		top 0
		left 0
		width 100%
		height 100%
		content ''

	&__item
		position relative
		margin 2px
		width 92px
		height 92px
		font-family Arial
		font-size 50px
		text-align center
		line-height 92px
		border-radius 5px
		background-color black
		color white
		cursor pointer
		box-shadow inset 0 0 3px 1px black

		&_active
			z-index 20

		&_empty
			opacity 0
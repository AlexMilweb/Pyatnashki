.area
	display flex
	flex-wrap wrap
	width 400px
	height 400px
	background rgba(255, 255, 255, .5)
	border 7px solid black
	border-radius 10px
	box-shadow 10px 10px 20px 0 black

	&__item
		margin 2px
		width 92px
		height 92px
		font-family Arial
		font-size 50px
		text-align center
		line-height 92px
		border-radius 5px
		background-color black
		color white
		cursor pointer
		box-shadow inset 0 0 3px 1px black

		&_empty
			opacity 0
.cap
	position absolute
	z-index 30
	top 0
	left 0
	width 400px
	height 400px
	border-radius 10px
	background black
	box-shadow 0 0 20px 20px #111 inset, 0 0 100px 30px black inset
	transform-origin 30% 30%
	transform rotate(45deg) scale(4) translateY(-60vh)
	animation-name: capStart
	animation-duration: 2s
	animation-fill-mode: forwards;

	&:before
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		line-height 400px
		font-family Verdana
		font-size 120px
		color white
		text-align center
		content '15'

	&_off
		animation-name: capOff
		animation-duration: 2s
		animation-fill-mode: forwards;

@keyframes capStart
	from
		transform-origin 30% 30%
		transform rotate(45deg) scale(4) translateY(-60vh)
	to
		transform-origin 50% 50%
		transform rotate(0) scale(1) translateY(0)

@keyframes capOff
	from
		transform-origin 50% 50%
		transform rotate(0) scale(1) translateY(0)
	to
		transform-origin 30% 30%
		transform rotate(45deg) scale(4) translateY(-60vh)

.cap
	position absolute
	z-index 30
	top 0
	left 0
	display flex
	align-items center
	width 400px
	height 400px
	background black
	border-radius 10px
	box-shadow 0 0 20px 20px #111 inset, 0 0 100px 30px black inset
	transform-origin 30% 30%
	transform rotate(45deg) scale(4) translateY(-60vh)
	animation-name capStart
	animation-duration 2s
	animation-fill-mode forwards

	&:before
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		line-height 400px
		font-family Verdana
		font-size 120px
		color white
		text-align center
		content '15'
		transition opacity .3s, visibility .3s

	&__user
		padding-x 40px
		display flex
		justify-content space-between
		width 100%
		opacity 0
		visibility hidden
		transition opacity .3s, visibility .3s

	&__win
		position absolute
		width 100%
		opacity 0
		visibility hidden
		transition opacity .3s, visibility .3s

	&__add-user
		width 100px
		height 40px
		font-size 16px
		text-align center
		line-height 40px
		background white
		border-radius 7px

	&__input
		padding-x 15px
		width 200px
		height 40px
		font-size 16px
		line-height 40px
		background white
		border-radius 7px
		border none
		box-shadow 1px 1px 1px 1px #ccc inset
		transition box-shadow .3s

		&_wrong
			box-shadow 0 0 5px 2px red inset

	&__win-answer
		margin-bottom 20px
		font-size 40px
		color white
		text-align center

	&__name
	&__step
	&__time
		position relative
		margin-bottom 10px
		padding-left 70px
		font-size 18px
		color white

		span
			position absolute
			right 70px

	&_off
		animation-name capOff
		animation-duration 2s
		animation-fill-mode forwards

	&_user
		& ^[0]__user
			opacity 1
			visibility visible

		&:before
			opacity 0
			visibility hidden

	&_win
		& ^[0]__win
			opacity 1
			visibility visible

		&:before
			opacity 0
			visibility hidden

@keyframes capStart
	from
		transform-origin 30% 30%
		transform rotate(45deg) scale(4) translateY(-60vh)
	to
		transform-origin 50% 50%
		transform rotate(0) scale(1) translateY(0)

@keyframes capOff
	from
		transform-origin 50% 50%
		transform rotate(0) scale(1) translateY(0)
	to
		transform-origin 30% 30%
		transform rotate(45deg) scale(4) translateY(-60vh)

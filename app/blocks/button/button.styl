.button
	padding 0 20px
	height 40px
	border none
	border-radius 7px
	line-height 40px
	color white
	background-color black
	box-shadow inset 0 0 6px rgba(255, 0, 0, .7), 7px 7px 20px 0 black
	transition box-shadow .5s

	&:hover
		box-shadow inset 0 0 30px rgba(255, 0, 0, .9), 7px 7px 20px 0 black
